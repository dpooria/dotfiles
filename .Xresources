! ================================
!   Xresources for xterm
!   Gruvbox Dark (green accented)
! ================================

! ---- Font rendering (global) ----
Xft.dpi:        96
Xft.antialias:  true
Xft.hinting:    true
Xft.hintstyle:  hintslight
Xft.rgba:       rgb
Xft.lcdfilter:  lcddefault

! ---- XTerm basics ----
XTerm*renderFont:           true
XTerm*termName:       xterm-256color
XTerm*faceName:       JetBrainsMono Nerd Font:style=Regular
XTerm*faceSize:       16
XTerm.vt100.scaleHeight: 0.95
XTerm*utf8:                 2
XTerm*locale:               true
XTerm*saveLines:            4096
XTerm*scrollBar:            false

! Disable fake bold
XTerm*boldMode:       false
XTerm*allowBoldFonts: false

! Internal padding
XTerm*internalBorder: 4

! ---- Colors ----
XTerm*foreground:     #ebdbb2
XTerm*background:     #1d2021
XTerm*cursorColor:    #b8bb26
XTerm*cursorColor2:   #1d2021
XTerm*highlightColor: #3c3836
XTerm*highlightTextColor: #ebdbb2
XTerm*pointerColor:   #b8bb26
XTerm*reverseVideo:   false

! Normal colors
XTerm*color0:  #282828
XTerm*color1:  #cc241d
XTerm*color2:  #b8bb26
XTerm*color3:  #d79921
XTerm*color4:  #458588
XTerm*color5:  #b16286
XTerm*color6:  #689d6a
XTerm*color7:  #a89984

! Bright colors
XTerm*color8:  #928374
XTerm*color9:  #fb4934
XTerm*color10: #a3be2b
XTerm*color11: #fabd2f
XTerm*color12: #83a598
XTerm*color13: #d3869b
XTerm*color14: #8ec07c
XTerm*color15: #ebdbb2

! ---- Selection / URL handling ----
XTerm*on3Clicks: regex
XTerm*charClass: 33:48,36-47:48,58:48,63-64:48,126:48

! ---- Misc fixes ----
XTerm*vt100.graphics: on
XTerm*cursorUnderLine: true
! Use CLIPBOARD instead of PRIMARY
XTerm*selectToClipboard: true
! Ctrl+Shift+C to copy
XTerm.vt100.translations: #override \
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD)
